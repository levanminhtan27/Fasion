@model Product
@{
    ViewBag.Title = "Show Product";
    var imagePath = $"/images/{(Model.Avata ?? "none-avatar.png")}";
}
<h2 class="text-center input_margin" style="margin-top: 40px">@Model.NameProduct</h2>
<div class="row  ">
    <div class="col-md-4 col-12" style="margin-top:10px">
        <div class="card">
            <div class="card-img-bottom text-xl-center">
                <img src="@imagePath" class="m-2" style="width: 300px; height: 350px; margin-bottom:20px" />
            </div>
        </div>
    </div>
    <div class="col-md-5" style="margin-top:10px">
        <div class="card">
            <div class="card-body">

                <p>
                    <b>Mô tả về sản phẩm:</b>
                    @Model.Description
                </p>
                <p>
                    <b>Giá:</b>
                    @Model.Price.ToString("N0")đ
                </p>
            </div>
            <div class="input_margin">
                <b>Số Lượng</b>
                <input type="number" name="Số Lượng " value="1" id="@Model.ProductId" />
            </div>
            <div class="card-footer text-center margin-button">
                <a class="btn btn-warning" href="javascript:void(0)" onclick="CustomerCart.AddItem(@Model.ProductId)">
                    Thêm vào giỏ hàng
                </a>
                <a asp-controller="Product" asp-action="ShowUser" asp-route-id="@Model.CategoryId" class="btn btn-warning">Trở về</a>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

