
@model MVC_Fashion.Models.ViewAccount.LoginViewAccount

<div class="login">
    <div class="container">
        <h2>ĐĂNG NHẬP</h2>

        <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
            <form  asp-controller="Account" asp-action="Login">
                
                    
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    
                    <div  asp-validation-summary="All">
                        <input asp-for="Password" class="form-control" placeholder="Mật Khẩu" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="forgot" >
                        <label class="form-check-label" asp-for="RememberMe">
                            <input type="checkbox" asp-for="RememberMe">
                            Ghi nhớ mật khẩu
                        </label>
                    </div>
               
                <input type="submit" value="Login">
            </form>
        </div>
        <h4>DÀNH CHO NGƯỜI MỚI</h4>
        <p><a asp-controller="Account"asp-action="Create">Đăng ký tại đây</a> (Hoặc) Quay lại <a asp-controller="Home" asp-action="Index">Trang chủ<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></a></p>
    </div>
</div>