@model List<Category>
@{
    ViewData["Title"] = "Show Catagory";
}
    <div style="margin-top:20px">
        <table class="table table-striped table-bordered">
            <thead style="text-align:center">
                <tr>
                    <th style="text-align:center">ID</th>
                    <th style="text-align:center">Name Catagory</th>
                </tr>
            </thead>
            <tbody style="text-align:center">
                @foreach (var item in Model)
                {

                    <tr >
                        <td> @item.CategoryId</td>
                        <td  class="category-name ">@item.Name</td>
                      
                        <td>
                            <a type="button" class="btn btn-info" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" >
                                Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId"
                               onclick="return confirm ('Bạn muốn xáo sản phầm này?')">
                                Delete
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>


